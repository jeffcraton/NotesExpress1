extends layout

block content

  h1 Add Note

  label Subject:  
  br
  input(type='text', id='notesubject', name='f1_notesubject')
  br
  br

  label Tags:  
  br
  div(id='notetags', class='input textarea clearfix custom stackoverflow')
  br
  br

  button(class='ui-button ui-widget ui-corner-all', id='icoSave', title='Save this note') 
